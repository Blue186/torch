.title {
  display: inline-block;
  padding: 0 40rpx;
  height: 70rpx;
  line-height: 70rpx;
  font-weight: 600;
  background-color: #ffdc88;
  border: 5rpx solid #000;
  border-left: none;
  border-radius: 0  10rpx 10rpx 0;
}
.content {
  width: 80%;
  margin: 20rpx auto;
  border: 2rpx solid #fd8933;
  border-radius: 10rpx;
  background-color: #eefdff;
}
.detailPage {
  width: 95%;
  border: 5rpx solid #000;
  margin: 20rpx auto;
  border-radius: 15rpx;
  background-color: #fffbdf;
}
.detailPage .header {
  margin-top: 20rpx;
  height: 100rpx;
  border-bottom: 2rpx solid #ffc43a;
  font-size: 50rpx;
  font-weight: 500;
  text-align: center;
}
.detailPage .header .tag {
  position: absolute;
  top: 20rpx;
  right: 100rpx;
}
.detailPage .activityMessage {
  margin-top: 50rpx;
}
.detailPage .activityMessage .content .messageItem .messageName {
  width: 25%;
  text-align: right;
}
.detailPage .announcements {
  margin-top: 50rpx;
}
.detailPage .apply .deadline {
  font-size: 24rpx;
  padding-left: 20rpx;
}
.detailPage .apply .applyDate {
  display: flex;
  margin-top: 20rpx;
  border: 2rpx solid #fd8933;
  border-radius: 10rpx;
  background-color: #f0ffed;
}
.detailPage .apply .applyDate .dateBox {
  border: 1rpx solid #000;
  border-radius: 40rpx;
  background-color: #fff;
  padding: 0 10rpx;
  margin: 20rpx;
}
.detailPage .apply .applyDate .active {
  background-color: #fd8933;
}
.detailPage .apply .applyTime {
  width: 90%;
  margin: 0 auto;
}
.detailPage .apply .applyTime .timeBox {
  background-color: #fff;
  margin-top: 30rpx;
  border: 1rpx solid #000;
  display: flex;
  padding: 40rpx 10rpx;
  border-radius: 10rpx;
  align-items: center;
}
.detailPage .apply .applyTime .timeBox .time {
  text-align: right;
  width: 100rpx;
  font-size: 40rpx;
}
.detailPage .apply .applyTime .timeBox .myButton {
  margin-left: 30rpx;
}
.detailPage .apply .applyTime .timeBox .arrow {
  width: 120rpx;
  margin: 0 20rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  font-size: 20rpx;
}
.detailPage .apply .applyTime .timeBox .arrow .line {
  border: 1rpx solid #000;
}
.detailPage .apply .note {
  color: #c3c3c3;
  font-size: 25rpx;
  margin: 40rpx 35rpx;
}

