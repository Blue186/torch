.activity {
  position: relative;
  border: 1rpx solid #808080;
  width: 90vw;
  height: 400rpx;
  border-radius: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.activity .btn {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  height: 70rpx;
  font-size: 35rpx;
  line-height: 70rpx;
  background-color: #5566cd;
  color: white;
}
.activity .tag {
  position: absolute;
  right: 40rpx;
  width: 55rpx;
}
.activity .pic {
  margin-top: 10rpx;
  width: 95%;
  height: 60%;
  background-color: #4CD964;
}
.activity .activityInformation {
  width: 95%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.activity .activityInformation .activityTime {
  font-size: 28rpx;
  color: #5566cd;
}
.activity .activityInformation .activityNumber {
  font-size: 32rpx;
}
.activity .activityInformation .nameAndLocation {
  display: flex;
  align-items: center;
}
.activity .activityInformation .nameAndLocation .activityName {
  font-weight: bold;
}
.activity .activityInformation .nameAndLocation .location {
  display: flex;
  align-items: center;
  font-size: 30rpx;
  margin-left: 20rpx;
}
.activity .activityInformation .nameAndLocation .location image {
  width: 35rpx;
  height: 35rpx;
}

